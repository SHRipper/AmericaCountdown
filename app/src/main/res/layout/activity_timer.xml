<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <include layout="@layout/content_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/content_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/content_header"
        android:id="@+id/txtPreMessage"
        android:text="Noch"
        android:textSize="40dp"
        android:textAlignment="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textColor="@color/color_txtDays"
        android:id="@+id/txtHours"
        android:text="--time--"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@id/txtPreMessage"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_txtDays"
        android:id="@+id/txtMinutes"
        android:text="--time--"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@id/txtHours"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_txtDays"
        android:id="@+id/txtSeconds"
        android:text="--time--"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_below="@id/txtMinutes"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/txtPostMessage"
        android:text="bis zum Flug!!!"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_below="@id/txtSeconds"
        />

</RelativeLayout>
